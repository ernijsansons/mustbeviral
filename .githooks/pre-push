#!/bin/bash
# Simple, non-blocking pre-push hook

echo "üöÄ Pre-push validation (non-blocking)"

# Basic environment check
if [ -f "package.json" ] && [ -d "node_modules" ]; then
    echo "‚úÖ Root environment OK"
else
    echo "‚ö†Ô∏è Root environment incomplete, allowing push"
fi

if [ -f "mustbeviral/package.json" ] && [ -d "mustbeviral/node_modules" ]; then
    echo "‚úÖ Mustbeviral environment OK"
else
    echo "‚ö†Ô∏è Mustbeviral environment incomplete, allowing push"
fi

echo "‚úÖ Pre-push validation complete (allowing push)"
exit 0

