# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Database (PostgreSQL - using local for development)
DATABASE_URL=postgresql://username:password@localhost:5432/must_be_viral_dev

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OAuth Configuration
# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Twitter OAuth (get from Twitter Developer Portal)
TWITTER_CLIENT_ID=your-twitter-client-id-here
TWITTER_CLIENT_SECRET=your-twitter-client-secret-here

# Base URL for OAuth callbacks
BASE_URL=http://localhost:5000

# Session Secret (use a strong random string in production)
SESSION_SECRET=your-session-secret-change-in-production

# Cloudflare Configuration (optional)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here

# Environment
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000